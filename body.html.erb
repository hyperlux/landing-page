<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Keep your existing head content -->
    <!-- Add any additional styles or scripts needed for the new components -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.7.14/lottie.min.js"></script>
</head>
<body>
    <div class="hamburger-menu" onclick="toggleSidebar()">☰</div>
    <div class="sidebar">
        <!-- Keep your existing sidebar content -->
    </div>
    <div class="main-content">
        <div class="landing page">  
            <div class="container">
                <div class="title-container">
                    <% if !mobile_view? && @welcome.present? %>
                        <div class="lottie title welcome"></div>
                    <% else %>
                        <h1>We Build Communities</h1>
                    <% end %>
                </div>
                <div class="text-container">
                    <div class="secondary-text">
                        We're a <a href="/who-we-are">coöperative</a> that <a href="/software">builds software</a> and <a href="/services">provides services</a> for online communities.
                    </div>
                    <ul class="platform-shortlist">
                        <!-- Keep the platform list as in the original component -->
                    </ul>
                </div>
                <%= render partial: "contact_form", locals: { success_message: "Sent. We'll be in touch shortly." } %>
            </div>
        </div>

        <div class="page first">
            <!-- Content for the first page -->
        </div>

        <div class="page second">
            <!-- Content for the second page -->
        </div>

        <div class="page third">
            <!-- Content for the third page -->
        </div>

        <div class="page contact">
            <!-- Content for the contact page -->
        </div>
    </div>

    <script>
        // Keep your existing JavaScript
        function toggleSidebar() {
            const sidebar = document.querySelector('.sidebar');
            sidebar.classList.toggle('visible');
        }

        // Add the Lottie animations
        <% if @welcome.present? %>
            var title = lottie.loadAnimation({
                container: document.querySelector(".lottie.welcome"),
                renderer: 'svg',
                autoplay: true,
                loop: false,
                path: "<%= @welcome.upload.url %>"
            });
            title.setSpeed(0.2);
        <% end %>

        // Add the other Lottie animations as in the original component
    </script>
</body>
</html>