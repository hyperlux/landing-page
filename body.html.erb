<button class="theme-toggle" onclick="toggleTheme()">Toggle Theme</button>

<script>
  function toggleTheme() {
    document.body.classList.toggle('dark-theme');
  }

  function fetchAnnouncements() {
    fetch('https://aurovillenetwork/c/announcements/5.json')
      .then(response => response.json())
      .then(data => {
        const announcementsContainer = document.querySelector('.latest-announcements');
        announcementsContainer.innerHTML = '<h2>Latest Announcements</h2>';
        
        data.topic_list.topics.forEach(topic => {
          const announcementHtml = `
            <div class="announcement-item">
              <img src="${topic.image_url || 'default-image-url.jpg'}" alt="${topic.title}">
              <div class="content">
                <h3>${topic.title}</h3>
                <p>${new Date(topic.created_at).toLocaleDateString()}</p>
              </div>
            </div>
          `;
          announcementsContainer.innerHTML += announcementHtml;
        });
      })
      .catch(error => console.error('Error fetching announcements:', error));
  }

  document.addEventListener('DOMContentLoaded', function() {
    fetchAnnouncements();
    // Any other initialization code...
  });
</script>
