<style>

:root {
  --sidebar-bg: #2c3e50;
  --main-bg: #f5f5f5;
  --primary-color: #e67e22;
  --secondary-color: #c0392b;
  --text-color: #333;
  --light-text: #fff;
}

body, html {
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
  background-color: var(--main-bg);
  color: var(--text-color);
}

.dashboard-container {
  display: flex;
  min-height: 100vh;
}

/* Sidebar Styles */
.sidebar {
  width: 250px;
  background-color: var(--sidebar-bg);
  color: var(--light-text);
  padding: 20px;
}

.logo img {
  max-width: 100%;
  margin-bottom: 20px;
}

.sidebar nav ul {
  list-style-type: none;
  padding: 0;
}

.sidebar nav ul li {
  margin-bottom: 10px;
}

.sidebar nav ul li a {
  color: var(--light-text);
  text-decoration: none;
  display: block;
  padding: 10px;
  transition: background-color 0.3s;
}

.sidebar nav ul li a:hover,
.sidebar nav ul li.active a {
  background-color: rgba(255, 255, 255, 0.1);
}

.hot-badge {
  background-color: var(--secondary-color);
  color: var(--light-text);
  padding: 2px 6px;
  border-radius: 10px;
  font-size: 0.8em;
  margin-left: 5px;
}

/* Main Content Styles */
.main-content {
  flex-grow: 1;
  padding: 20px;
}

header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.search-bar input {
  padding: 10px;
  width: 300px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.user-menu img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.welcome-banner {
  background-color: var(--primary-color);
  color: var(--light-text);
  padding: 20px;
  border-radius: 5px;
  margin-bottom: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btn-learn-more {
  background-color: var(--secondary-color);
  color: var(--light-text);
  padding: 10px 20px;
  text-decoration: none;
  border-radius: 5px;
}

.dashboard-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}

.dashboard-grid section {
  background-color: #fff;
  padding: 20px;
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.announcement-item, .topic-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.announcement-item img, .topic-item img {
  width: 50px;
  height: 50px;
  object-fit: cover;
  margin-right: 10px;
  border-radius: 5px;
}

.quote {
  background-color: var(--secondary-color);
  color: var(--light-text);
  text-align: center;
  padding: 40px 20px;
}

.quote h2 {
  font-size: 3em;
  margin-bottom: 10px;
}

.video-summary iframe {
  width: 100%;
  height: 200px;
}

.whos-online img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 5px;
}

.forum-statistics .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 2em;
  font-weight: bold;
}

.stat-label {
  font-size: 0.8em;
  color: #777;
}

</style>

<div class="dashboard-container">
  <aside class="sidebar">
    <div class="logo">
      <img src="/images/auroville-logo.png" alt="Auroville Community">
    </div>
    <nav>
      <ul>
        <li class="active"><a href="/dashboard">Dashboard</a></li>
        <li><a href="/homepage">Homepage</a></li>
        <li><a href="/announcements">Announcements <span class="hot-badge">Hot</span></a></li>
        <li><a href="/events">Events</a></li>
        <li><a href="/forums">Forums</a></li>
        <li><a href="/social">Social</a></li>
        <li><a href="/directory">Directory</a></li>
      </ul>
    </nav>
    <div class="others-section">
      <h3>OTHERS</h3>
      <ul>
        <li><a href="/references">References</a></li>
        <li><a href="/help-center">Help Center</a></li>
        <li><a href="/miscellaneous">Miscellaneous</a></li>
        <li><a href="/logout">Log out</a></li>
      </ul>
    </div>
  </aside>

  <main class="main-content">
    <header>
      <div class="search-bar">
        <input type="text" placeholder="Search everything...">
      </div>
      <div class="user-menu">
        {{#if currentUser}}
          <img src="{{currentUser.avatar_template}}" alt="{{currentUser.username}}">
          <span>{{currentUser.username}}</span>
        {{else}}
          <a href="/login">Login</a>
        {{/if}}
      </div>
    </header>

    <h1>Dashboard</h1>

    <div class="welcome-banner">
      <p>Welcome on the new Auroville Community platform! We hope this can become a space for true connection, in a spirit of respect and mutuality.</p>
      <a href="/learn-more" class="btn-learn-more">Learn more</a>
    </div>

    <div class="dashboard-grid">
      <section class="announcements">
        <h2>Latest Announcements</h2>
        {{#each announcements}}
          <div class="announcement-item">
            <img src="{{this.image}}" alt="{{this.title}}">
            <div>
              <h3>{{this.title}}</h3>
              <p>{{this.date}}</p>
            </div>
          </div>
        {{/each}}
      </section>

      <section class="quote">
        <h2>66</h2>
        <p>All's miracle and can by miracle change.</p>
        <p class="quote-source">BOOK I, CANTO II</p>
      </section>

      <section class="video-summary">
        <h2>Video Summary</h2>
        <iframe width="560" height="315" src="https://www.youtube.com/embed/VIDEO_ID" frameborder="0" allowfullscreen></iframe>
      </section>

      <section class="whos-online">
        <h2>Who's Online</h2>
        {{#each onlineUsers}}
          <img src="{{this.avatar_template}}" alt="{{this.username}}">
        {{/each}}
      </section>

      <section class="recent-topics">
        <h2>Recent Topics</h2>
        {{#each recentTopics}}
          <div class="topic-item">
            <img src="{{this.user.avatar_template}}" alt="{{this.user.username}}">
            <div>
              <h3>{{this.title}}</h3>
              <p>by {{this.user.username}}</p>
            </div>
          </div>
        {{/each}}
      </section>

      <section class="forum-statistics">
        <h2>Forum Statistics</h2>
        <div class="stat-item">
          <span class="stat-number">{{registeredUsersCount}}</span>
          <span class="stat-label">REGISTERED USERS</span>
        </div>
      </section>
    </div>
  </main>
</div>
