<style>
  /* ... (previous CSS remains the same) ... */

  .dashboard-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: auto auto auto;
    gap: 20px;
  }

  .latest-announcements {
    grid-column: 1 / 2;
    grid-row: 1 / 3;
  }

  .quote {
    grid-column: 2 / 3;
    grid-row: 1 / 2;
    background-color: var(--secondary-color);
    color: var(--light-text);
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 40px 20px;
  }

  .quote h2 {
    font-size: 4em;
    margin: 0;
  }

  .video-summary {
    grid-column: 2 / 3;
    grid-row: 2 / 3;
  }

  .whos-online {
    grid-column: 1 / 2;
    grid-row: 3 / 4;
  }

  .recent-topics {
    grid-column: 3 / 4;
    grid-row: 1 / 3;
  }

  .forum-statistics {
    grid-column: 3 / 4;
    grid-row: 3 / 4;
  }

  .announcement-item, .topic-item {
    background-color: #f9f9f9;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 10px;
  }

  .whos-online img {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    margin-right: 5px;
  }

  .forum-statistics .stat-number {
    font-size: 3em;
    color: var(--primary-color);
  }

  .forum-statistics .stat-label {
    text-transform: uppercase;
    font-size: 0.8em;
    color: #777;
  }
</style>

<div class="dashboard-container">
  <main class="main-content">
    <h1>Dashboard</h1>

    <div class="welcome-banner">
      <p>Welcome on the new Auroville Community platform! We hope this can become a space for true connection, in a spirit of respect and mutuality.</p>
      <a href="/learn-more" class="btn-learn-more">Learn more</a>
    </div>

    <div class="dashboard-grid">
      <section class="latest-announcements">
        <h2>Latest Announcements</h2>
        {{#each announcements}}
          <div class="announcement-item">
            <img src="{{this.image}}" alt="{{this.title}}">
            <div>
              <h3>{{this.title}}</h3>
              <p>{{this.date}}</p>
            </div>
          </div>
        {{/each}}
      </section>

      <section class="quote">
        <h2>66</h2>
        <p>All's miracle and can by miracle change.</p>
        <p class="quote-source">BOOK I, CANTO II</p>
      </section>

      <section class="video-summary">
        <h2>Video Summary</h2>
        <iframe width="100%" height="200" src="https://www.youtube.com/embed/VIDEO_ID" frameborder="0" allowfullscreen></iframe>
      </section>

      <section class="whos-online">
        <h2>Who's Online</h2>
        {{#each onlineUsers}}
          <img src="{{avatar_template}}" alt="{{username}}">
        {{/each}}
      </section>

      <section class="recent-topics">
        <h2>Recent Topics</h2>
        {{#each recentTopics}}
          <div class="topic-item">
            <img src="{{this.user.avatar_template}}" alt="{{this.user.username}}">
            <div>
              <h3>{{this.title}}</h3>
              <p>by {{this.user.username}}</p>
            </div>
          </div>
        {{/each}}
      </section>

      <section class="forum-statistics">
        <h2>Forum Statistics</h2>
        <div class="stat-item">
          <span class="stat-number">{{registeredUsersCount}}</span>
          <span class="stat-label">REGISTERED USERS</span>
        </div>
      </section>
    </div>
  </main>
</div>
