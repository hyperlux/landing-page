        .recent-topics { grid-column: 3 / 4; grid-row: 2 / 4; }
        .forum-statistics { grid-column: 3 / 4; grid-row: 4 / 5; }

        .topic-item {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
            padding: 10px;
            background-color: #f9f9f9;
            border-radius: 5px;
        }

        .topic-item img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .topic-item .content {
            flex-grow: 1;
        }

        .topic-item h3 {
            margin: 0;
            font-size: 16px;
        }

        .topic-item p {
            margin: 5px 0 0;
            font-size: 14px;
            color: #666;
        }

        .topic-item a {
            color: var(--text-color);
            text-decoration: none;
        }

        .topic-item a:hover {
            color: var(--primary-color);
        }

        .video-container {
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
        }

        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        h1, h2 {
            margin-top: 0;
        }

        .quote h2 {
            font-size: 2.5em;
            margin: 0;
        }

        .quote p {
            margin: 10px 0 0;
