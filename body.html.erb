<script type="text/x-handlebars" data-template-name="dashboard">
  <style>
    :root {
      --sidebar-bg: #2c3e50;
      --main-bg: #f5f5f5;
      --primary-color: #e67e22;
      --secondary-color: #b33f1d;
      --text-color: #333;
      --light-text: #fff;
      --card-bg: #fff;
    }

    body, html {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background-color: var(--main-bg);
      color: var(--text-color);
    }

    .dashboard-container {
      padding: 20px;
    }

    .main-content {
      max-width: 1200px;
      margin: 0 auto;
    }

    .welcome-banner {
      background-color: var(--primary-color);
      color: var(--light-text);
      padding: 20px;
      border-radius: 5px;
      margin-bottom: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .btn-learn-more {
      background-color: var(--secondary-color);
      color: var(--light-text);
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 5px;
    }

    .dashboard-grid {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      grid-template-rows: auto auto auto;
      gap: 20px;
    }

    .dashboard-grid section {
      background-color: var(--card-bg);
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .latest-announcements {
      grid-column: 1 / 2;
      grid-row: 1 / 3;
    }

    .quote {
      grid-column: 2 / 3;
      grid-row: 1 / 2;
      background-color: var(--secondary-color);
      color: var(--light-text);
      text-align: center;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .quote h2 {
      font-size: 4em;
      margin: 0;
    }

    .video-summary {
      grid-column: 2 / 3;
      grid-row: 2 / 3;
    }

    .whos-online {
      grid-column: 1 / 2;
      grid-row: 3 / 4;
    }

    .recent-topics {
      grid-column: 3 / 4;
      grid-row: 1 / 3;
    }

    .forum-statistics {
      grid-column: 3 / 4;
      grid-row: 3 / 4;
    }

    .announcement-item, .topic-item {
      display: flex;
      align-items: center;
      margin-bottom: 10px;
      background-color: #f9f9f9;
      padding: 10px;
      border-radius: 5px;
    }

    .announcement-item img, .topic-item img, .whos-online img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      margin-right: 10px;
    }

    .forum-statistics .stat-number {
      font-size: 3em;
      color: var(--primary-color);
    }

    .forum-statistics .stat-label {
      text-transform: uppercase;
      font-size: 0.8em;
      color: #777;
    }
  </style>

  <div class="dashboard-container">
    <main class="main-content">
      <h1>Dashboard</h1>

      <div class="welcome-banner">
        <p>Welcome on the new Auroville Community platform! We hope this can become a space for true connection, in a spirit of respect and mutuality.</p>
        <a href="{{url 'learn-more'}}" class="btn-learn-more">Learn more</a>
      </div>

      <div class="dashboard-grid">
        <section class="latest-announcements">
          <h2>Latest Announcements</h2>
          {{#each model.announcements as |announcement|}}
            <div class="announcement-item">
              <img src="{{announcement.image}}" alt="{{announcement.title}}">
              <div>
                <h3>{{announcement.title}}</h3>
                <p>{{format-date announcement.date}}</p>
              </div>
            </div>
          {{/each}}
        </section>

        <section class="quote">
          <h2>66</h2>
          <p>All's miracle and can by miracle change.</p>
          <p class="quote-source">BOOK I, CANTO II</p>
        </section>

        <section class="video-summary">
          <h2>Video Summary</h2>
          <iframe width="100%" height="200" src="https://www.youtube.com/embed/VIDEO_ID" frameborder="0" allowfullscreen></iframe>
        </section>

        <section class="whos-online">
          <h2>
            <span title="Users seen in the last 5 minutes">
              Online ({{model.online_user_count}}):
            </span>
          </h2>
          {{#each model.online_users as |user|}}
            <img src="{{user.avatar_template}}" alt="{{user.username}}" title="{{user.username}}">
          {{/each}}
        </section>

        <section class="recent-topics">
          <h2>Recent Topics</h2>
          {{#each model.recent_topics as |topic|}}
            <div class="topic-item">
              <img src="{{topic.user.avatar_template}}" alt="{{topic.user.username}}">
              <div>
                <h3>{{topic.title}}</h3>
                <p>by {{topic.user.username}}</p>
              </div>
            </div>
          {{/each}}
        </section>

        <section class="forum-statistics">
          <h2>Forum Statistics</h2>
          <div class="stat-item">
            <span class="stat-number">{{model.registered_users_count}}</span>
            <span class="stat-label">REGISTERED USERS</span>
          </div>
        </section>
      </div>
    </main>
  </div>
</script>
