.welcome-banner p {
    font-size: 18px; /* Increased from the default 14px */
    margin: 0;
    flex-grow: 1;
    padding-right: 20px;
}

.btn-learn-more {
    background-color: var(--secondary-color);
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    font-size: 16px; /* Slightly increased button text size */
    white-space: nowrap;
}

